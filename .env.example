# ============================================================
# House Hunter Configuration
# ============================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ============================================================

# --- Required API Keys ---

# OpenAI - Used for GPT-4o-mini property analysis
# Sign up: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# RapidAPI - Used for Realtor API Data (property listings)
# Sign up: https://rapidapi.com/nusantaracodedotcom/api/realtor-api-data
# Free tier: 10,000 calls/month
RAPIDAPI_KEY=

# --- Telegram Notifications ---
# Create a bot: https://core.telegram.org/bots#how-do-i-create-a-bot
# Get chat ID: Send a message to your bot, then visit
#   https://api.telegram.org/bot<TOKEN>/getUpdates
HOUSE_HUNTER_BOT_TOKEN=
HOUSE_HUNTER_CHAT_ID=

# --- Search Criteria (customize to your area) ---
HOUSE_HUNTER_MIN_PRICE=200000
HOUSE_HUNTER_MAX_PRICE=350000
HOUSE_HUNTER_SUBURBS=Westlake,North Olmsted,Bay Village,Rocky River
HOUSE_HUNTER_STATE=OH
HOUSE_HUNTER_AVOID_CITIES=Cleveland,Parma
HOUSE_HUNTER_TIMEZONE=US/Eastern

# --- Optional ---
# LangSmith tracing (for debugging LangGraph workflows)
# Sign up: https://smith.langchain.com
LANGSMITH_TRACING=false
LANGSMITH_API_KEY=
